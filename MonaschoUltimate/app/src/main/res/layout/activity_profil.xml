<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etJk"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>

            <!--                <TextView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Nomor Telephone"-->
            <!--                    android:textSize="12dp"-->
            <!--                    android:layout_marginStart="12dp"-->
            <!--                    android:layout_marginTop="10dp" />-->

            <!--                <EditText-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="40dp"-->
            <!--                    android:background="@drawable/bg_et_profil"-->
            <!--                    android:layout_marginStart="10dp"-->
            <!--                    android:layout_marginEnd="10dp"-->
            <!--                    android:layout_marginTop="4dp"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etTglLahir"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kodepos"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etKodepos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kecamatan"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etKecamatan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_et_profil"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:textSize="10dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:paddingLeft="10dp"/>

            <!--                <TextView-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="Password"-->
            <!--                    android:textSize="12dp"-->
            <!--                    android:layout_marginStart="12dp"-->
            <!--                    android:layout_marginTop="10dp" />-->

            <!--                <EditText-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="40dp"-->
            <!--                    android:background="@drawable/bg_et_profil"-->
            <!--                    android:inputType="textPassword"-->
            <!--                    android:layout_marginStart="10dp"-->
            <!--                    android:layout_marginEnd="10dp"-->
            <!--                    android:layout_marginTop="4dp"/>-->

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_btn_keranjang"
                    android:text="UPDATE PROFIL"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/backBtn"
        android:padding="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/ic_backs"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>